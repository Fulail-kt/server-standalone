{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "server/dist",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["shared/*"]
    },
    "lib": ["ES2020"], // Ensure no DOM types
    "types": ["node"] // Include Node.js types only
  },
  "include": ["server/**/*", "server/models", "server/routers", "server/context.ts", "server/db.ts", "server/index.ts", "server/trpc.ts", "server/types.ts"],
  "exclude": ["node_modules", "server/dist"]
}