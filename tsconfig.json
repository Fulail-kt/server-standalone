{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "server/dist",
    "rootDir": "server",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["shared/dist/*"],
      "@models/*":["server/models/*"]
    },
    "lib": ["ES2020"],
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "./shared/dist"
    ]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "server/dist", "shared"]
}